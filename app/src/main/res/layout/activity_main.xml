<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.brzhang.androidjobtest.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/addJob"
        android:scrollbars="none">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"/>
    </ScrollView>

    <TextView
        android:id="@+id/addNormalJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/addNetWorkJob"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:background="@drawable/bg_button_background_normal"
        android:text="添加普通任务"/>

    <TextView
        android:id="@+id/addNetWorkJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/addJob"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:background="@drawable/bg_button_background_network"
        android:text="添加网络任务"/>

    <TextView
        android:id="@+id/addJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:background="@drawable/bg_button_background_other"
        android:text="......."/>
</RelativeLayout>
